doctype html
head
  meta(name='viewport', content='width=device-width, initial-scale=1')
  script(src="/public/javascripts/jquery-1.11.3.min.js")
  script.
    $(document).ready(function() {

      var button = '<select name="article"><option value="null">-------</option><option value="the">the</option><option value="a">a</option><option value="an">an</option></select>'

      $("li").html(function(i,t) {
          return t.replace(' the ', button);
      });
      $("li").html(function(i,t) {
          return t.replace(' an ', button);
      });
      $("li").html(function(i,t) {
          return t.replace(' a ', button);
      });
    });
  link(rel="stylesheet" href="/public/stylesheets/custom.css")

body
  header
    h1 AnTweet
  div(class="container")
    div(class="main-content")
    div(class="tweet-content")
      ul#list
        each i in string
          li.res= i